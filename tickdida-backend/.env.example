# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置（如果使用Prisma）
# DATABASE_URL="postgresql://user:password@localhost:5432/tickdida"

# JWT配置
JWT_SECRET="your_jwt_secret_key_here"
JWT_EXPIRES_IN="24h"

# Stripe配置
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# 支付宝配置
ALIPAY_APP_ID="your_alipay_app_id"
ALIPAY_PRIVATE_KEY_PATH="./keys/app_private_key.pem"
ALIPAY_PUBLIC_KEY_PATH="./keys/alipay_public_key.pem"
ALIPAY_ROOT_CERT_PATH="./keys/alipayCertPublicKey_RSA2.crt"
ALIPAY_APP_CERT_PATH="./keys/appCertPublicKey_2021006101650795.crt"
ALIPAY_NOTIFY_URL="https://your-domain.com/api/alipay/notify"
ALIPAY_RETURN_URL="https://your-domain.com/api/alipay/return"

# 日志配置
LOG_LEVEL="info"

# 跨域配置
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"